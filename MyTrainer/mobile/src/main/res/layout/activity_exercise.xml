<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_deadlift_descriptor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ahisahar.mytrainer.bench_press_descriptor"
    tools:showIn="@layout/activity_exercise">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/weightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accelLabel"
            android:layout_marginTop="48dp"
            android:layout_toStartOf="@+id/accelvalue"
            android:width="120dp"
            android:text="Weight (Kg)"
            android:textIsSelectable="false" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/weightLabel"
            android:layout_alignStart="@+id/accelvalue"
            android:width="120dp"
            android:ems="10"
            android:inputType="number"
            android:text="50" />

        <EditText
            android:id="@+id/accelvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="39dp"
            android:layout_marginTop="74dp"
            android:layout_toEndOf="@+id/accelLabel"
            android:width="120dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0.8"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/accelLabel"
            style="@style/AppTheme.AppBarOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/accelvalue"
            android:layout_alignBottom="@+id/accelvalue"
            android:layout_toStartOf="@+id/logoutbutton"
            android:width="120dp"
            android:text="Max accel (m/s^2)"
            android:textIsSelectable="false"
            android:textSize="20dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="1000px"
            android:layout_height="500px"
            android:layout_alignBottom="@+id/textView"
            android:layout_gravity="top|center_horizontal"
            android:layout_toEndOf="@+id/textView"
            android:minHeight="200dp"
            android:minWidth="200dp" />
    </RelativeLayout>

    </ScrollView>


</RelativeLayout>





