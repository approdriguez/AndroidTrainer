<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_exercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ahisahar.mytrainer.history_exercises">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:minWidth="100px"
        android:minHeight="300px"
        android:id="@+id/cardView">

        <ImageView
            android:layout_width="115dp"
            android:layout_height="114dp"
            app:srcCompat="@drawable/bench0"
            android:id="@+id/imageView" />

        <TextView
            android:text="Press de Banca"
            android:layout_gravity="right"
            android:layout_marginTop="80px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <TextView
            android:text="2 series ,5 repeticiones"
            android:layout_gravity="right"
            android:layout_marginTop="120px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <TextView
            android:text="Max velocidad: 1m/s²"
            android:layout_gravity="right"
            android:layout_marginTop="160px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <TextView
            android:text="Peso: 50Kg"
            android:layout_gravity="right"
            android:layout_marginTop="200px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:minWidth="100px"
        android:minHeight="300px">

        <ImageView
            android:layout_width="124dp"
            android:layout_height="153dp"
            app:srcCompat="@drawable/squat0"
            android:id="@+id/imageView2" />


        <TextView
            android:text="Sentadillas"
            android:layout_gravity="right"
            android:layout_marginTop="80px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />
        <TextView
            android:text="3 series ,8 repeticiones"
            android:layout_gravity="right"
            android:layout_marginTop="120px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" />
        <TextView
            android:text="Max velocidad: 1,5m/s²"
            android:layout_gravity="right"
            android:layout_marginTop="160px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" />

        <TextView
            android:text="Peso: 40Kg"
            android:layout_gravity="right"
            android:layout_marginTop="200px"
            android:layout_marginRight="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
